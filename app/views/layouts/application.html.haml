!!!
%html
  %head
    = csrf_meta_tags 
    = csp_meta_tag 
    =# Enable PWA manifest for installable apps (make sure to enable in config/routes.rb too!) 
    =# tag.link rel: "manifest", href: pwa_manifest_path(format: :json) 
    %link(rel="icon" href="/icon.png" type="image/png")
    %link(rel="icon" href="/icon.svg" type="image/svg+xml")
    %link(rel="apple-touch-icon" href="/icon.png")
    %title= content_for(:title) || "Rails Starter"
    %meta{name: "turbo-prefetch", content: "false"}
    %meta{name: "viewport", content: "width=device-width,initial-scale=1"}
    %meta{name: "apple-mobile-web-app-capable", content: "yes"}
    %meta{name: "mobile-web-app-capable", content: "yes"}
    = turbo_refreshes_with(method: :morph, scroll: :preserve) 
    = yield(:head)
    = stylesheet_link_tag "application", "data-turbo-track": "reload"
    = javascript_importmap_tags 
    %meta{name: "viewport", content: "width=device-width,initial-scale=1"}
    %script
      window.process = { env: { NODE_ENV: 'development' }}
  %body
    = render Nav::DrawerComponent.new
    = turbo_frame_tag 'panel' do
      #page-top
        = render Nav::TopComponent.new

      #page-middle

        #page-left
          = render Nav::LeftComponent.new

        = turbo_frame_tag 'page-content' do
          = yield

      #page-bottom
        = render Nav::BottomComponent.new
